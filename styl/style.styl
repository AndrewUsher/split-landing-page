$backgroundColor = #333
$leftBackgroundColor = rgba(#006f20, 70%)	
$leftButtonHoverColor = rgba(darken($leftBackgroundColor, 20%), 30%)
$rightBackgroundColor = rgba(#20006f, 40%)
$rightButtonHoverColor = rgba(darken($rightBackgroundColor, 20%), 30%)
$hoverWidth = 75%
$hoverOppositeWidth = 25%
$slideSpeed = 700ms

html,
body
  font-family: 'Open Sans', sans-serif
  height: 100vh;
  margin: 0;
  overflow-x: hidden;
  padding: 0;
  width: 100vw;

h1
  font-size: 4rem;
  color: #fff;
  position: absolute;
  left: 50%;
  top: 20%;
  transform: translateX(-50%);
  white-space: nowrap;

.button
  display: block;
  position: absolute;
  left: 50%;
  top: 40%;
  height: 2.5rem;
  padding-top: 1.3rem;
  width: 15rem;
  text-align: center;
  color: #fff;
  border: .2rem solid #fff;
  font-weight: bold;
  text-transform: uppercase;
  text-decoration: none;
  transform: translateX(-50%);
  
.split.left .button:hover
      background-color: $leftButtonHoverColor;
      border-color: $leftButtonHoverColor;

.split.right .button:hover
      background-color: $rightButtonHoverColor;
      border-color: $rightButtonHoverColor;

.container
  position: relative;
  width: 100%;
  height: 100%;
  background: $backgroundColor;

.split
  position: absolute;
  width: 50%;
  height: 100%;
  overflow: hidden;

.split.left
  left: 0;
  background: url(../img/forest.jpeg) center center no-repeat;
  background-size: cover;

.split.left:before
  position: absolute;
  content: "";
  width: 100%;
  height: 100%;
  background: $leftBackgroundColor;

.split.right
  right: 0;
  background: url(../img/ocean.jpeg) center center no-repeat;
  background-size: cover;
  
.split.right:before
  position: absolute;
  content: "";
  width: 100%;
  height: 100%;
  background: $rightBackgroundColor;
  
.split.left,
.split.right,
.split.right:before,
.split.left:before
  transition: width $slideSpeed cubic-bezier(0.68, -0.55, 0.42, 2.07);

.hover-right .right
  width: $hoverWidth;

.hover-right .left
  width: $hoverOppositeWidth;

.hover-right .left:before
  z-index: 2;

.hover-left .left
  width: $hoverWidth;

.hover-left .right
  width: $hoverOppositeWidth;

.hover-left .right:before
  z-index: 2;

@media (max-width: 800px)
  h1
    font-size: 2rem;
  .button
    width: 12rem;

@media (max-height: 700px)
  .button
    top: 70%;